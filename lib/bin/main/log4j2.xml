<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="project0" packages="project0">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n" />
        </Console>
        <File name="fout" fileName="logs/app.log" immediateFlush="false" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n" />
        </File>
    </Appenders>

    <Loggers>
        <Root level="error">
            <AppenderRef ref="stdout" />
            <AppenderRef ref="fout" />
        </Root>
    </Loggers>
    
</Configuration>